{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "python scripts/sync_server_version.py"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["server.json"],
        "message": "chore(release): sync server.json for ${nextRelease.version} [skip ci]"
      }
    ],
    "@semantic-release/github"
  ]
}
